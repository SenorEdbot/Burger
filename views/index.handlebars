<img src="/assets/img/burger.jpg" data-id="burgerImage" alt="Burger Image" />
<h1>Eat-Da-Burger!</h1>
<div class="row">
    <div class="col-6">
        <h3>Uneaten Burgers</h3>
        <ul class="list-group">
            {{#each burger}}
                {{#unless devoured}}
                    {{> burger/burger_block devoured=true}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-6">
        <h3>Burger to be Eaten</h3>
        <ul class="list-group">
            {{#each burger}}
                {{#if devoured}}
                    {{> burger/burger_block devoured=false}}
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
<div class="row text-center addBurgerRow">
    <form role="form" class="burgerForm">
        <h4>Add A Burger!</h4>
        <div class="form-group">
            <label for="burgerName">Burger Name</label>
            <input type="text" class="form-control" data-id="burgerName">
        </div>
        <button type="submit" class="btn btn-primary submit" data-id="submitBtn">Submit</button>
    </form>
</div>